{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "**/*.test.*",
    "**/*-bak.*",
    "**/*_old.*",
    "**/*_refactored.*",
    "**/*-original.*",
    "**/*-failed.*",
    "server/postgresql-adapter-backup.ts",
    "server/routes/subscriptions-routes-bak.tsx"
  ]
}