# Backend Environment Variables for ECS
# These should be stored in AWS Secrets Manager

# Application Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration (store in AWS Secrets Manager)
DATABASE_URL=postgresql://username:password@host:port/database

# AI Services (store in AWS Secrets Manager)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX=knowledge-assistant
OPENAI_API_KEY=your-openai-api-key

# Email Service (store in AWS Secrets Manager)
SENDGRID_API_KEY=your-sendgrid-api-key

# Frontend Configuration
FRONTEND_URL=https://beyondask.com
CORS_ORIGIN=https://beyondask.com,https://www.beyondask.com

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret

# Monitoring
LOG_LEVEL=info
HEALTH_CHECK_TIMEOUT=30000